{% extends 'base.html.twig' %}
{% block title %}{{ sett('home_meta_title') }}{% endblock %}
{% block meta_description %}{{ sett('home_meta_description') }}{% endblock %}
{% block meta_keywords %}{{ sett('home_meta_keywords')}}{% endblock %}

{% block body_class %}training-purchase{% endblock %}
{% block content %}


<div class="page-content">
    <div class="purchase-container">
        <div class="purchase-row">
            <!-- Lewa kolumna -->
            <div class="purchase-col training-col">
                <div class="training-image">
                    <img src="{{ asset('build/images/back-onas.jpg') }}" alt="Szkolenie wideo">
                    
                </div>
                
                <h2 class="training-title">"PRZEMOC W KOŚCIELE - CZY MUSIMY BYĆ BEZBRONNI?"</h2>
                
                <div class="price-info">
                    <div class="price-row">
                        <div class="price-label">Jednorazowa płatność</div>
                        <div class="price-value">zł1187,00</div>
                    </div>
                    <div class="price-row total">
                        <div class="price-label">Suma</div>
                        <div class="price-value">PLN zł1187,00</div>
                    </div>
                </div>
                
                <div class="discount-section">
                    <a href="#">Posiadasz kod rabatowy?</a>
                </div>
                
                <div class="help-section">
                    <p>Potrzebujesz pomocy w złożeniu zamówienia? <a href="#">Skontaktuj się z nami!</a></p>
                </div>
            </div>
            
            <!-- Prawa kolumna -->
            <div class="purchase-col checkout-col">
                <div class="login-section">
                    <h3>Zaloguj się by kupić</h3>
                    <div class="login-row">
                        <input type="email" placeholder="E-mail">
                        <input type="password" placeholder="Hasło">
                        <button>LOG IN</button>
                    </div>
                    
                    <div class="separator">
                        <span>lub</span>
                    </div>
                </div>
                
                <div class="account-section">
                    <h3>Informacje o koncie</h3>
                    <div class="form-group">
                        <label>E-mail *</label>
                        <input type="email" placeholder="E-mail">
                    </div>
                </div>
                
                <div class="billing-section">
                    <h3>Informacje rozliczeniowe</h3>
                    <div class="form-group">
                        <label>Imię *</label>
                        <input type="text" placeholder="Imię">
                    </div>
                    <div class="form-group">
                        <label>Nazwisko *</label>
                        <input type="text" placeholder="Nazwisko">
                    </div>
                    <div class="form-group">
                        <label>Kraj *</label>
                        <select>
                            <option>Poland</option>
                        </select>
                    </div>
                    
                    <div class="checkbox-group">
                        <input type="checkbox" id="gift">
                        <label for="gift">To jest prezent</label>
                    </div>
                </div>
                
                <div class="payment-section">
                    <div class="payment-header">
                        <h3 style="margin-bottom: 0px">Metoda płatności</h3>
                        <span class="secure-badge">Bezpieczna</span>
                    </div>
                    
                    <div class="card-form">
                        <div class="form-group">
                            <label>Numer karty</label>
                            <div class="card-number-input">
                                <input type="text" placeholder="1234 1234 1234 1234">
                                <div class="card-icons">
                                    <img src="{{ asset('build/images/visa.png') }}" alt="Visa">
                                    <img src="{{ asset('build/images/mastercard.png') }}" alt="Mastercard">
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-details">
                            <div class="form-group">
                                <label>Data ważności</label>
                                <input type="text" placeholder="MM / RR">
                            </div>
                            <div class="form-group">
                                <label>Kod bezpieczeństwa</label>
                                <input type="text" placeholder="Kod CVC">
                                <span class="cvc-info">?</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="paypal-option">
                        <img src="{{ asset('build/images/paypal.png') }}" alt="PayPal">
                    </div>
                    
                    <div class="checkbox-group terms">
                        <input type="checkbox" id="terms">
                        <label for="terms">Akceptuję <a href="#">Regulamin</a> i <a href="#">Politykę prywatności</a></label>
                    </div>
                    
                    <button class="purchase-button">Sfinalizuj zakup</button>
                    
                    <div class="secure-info">
                        <i class="fa-solid fa-lock"></i> Wszystkie transakcje są bezpieczne i szyfrowane
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
