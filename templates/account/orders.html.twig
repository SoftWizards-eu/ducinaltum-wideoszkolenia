{% extends 'account/base.html.twig' %}

{% block account_content %}
    <h2 class="da-account-title">Moje zamówienia</h2>
    
    <div class="da-table-responsive">
        <table class="da-table">
            <thead>
                <tr>
                    <th>Szkolenie</th>
                    <th>Data zamówienia</th>
                    <th>Nr zamówienia</th>
                    <th>Cena</th>
                    <th>FV</th>
                </tr>
            </thead>
            <tbody>
                {% for i in 1..6 %}
                <tr>
                    <td>
                        <div style="display: flex; align-items: center;">
