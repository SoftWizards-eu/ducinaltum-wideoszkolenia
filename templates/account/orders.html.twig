                                <img src="{{ asset('build/images/placeholder-video.jpg') }}" alt="Szkolenie" width="80" style="border-radius: 4px;">
                            </div>
                            <div>
                                Nazwa szkolenia lorem ipsum dolor sit amet
                            </div>
                        </div>
                    </td>
                    <td>15.03.2018</td>
                    <td>0000{{ 75842 + i }}</td>
                    <td>680,00 zł</td>
                    <td>
                        <a href="#" style="color: #0077b6; font-size: 18px;">
                            <i class="fa fa-file-pdf"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}